#!/bin/bash
#---------------------
# Testing glance-daemons
#---------------------
set -e
DAEMONS=('glance-api' 'glance-registry')

for daemon in "${DAEMONS[@]}"; do
    if pidof -x $daemon > /dev/null; then
        echo "OK"
    else
        echo "ERROR: ${daemon} IS NOT RUNNING"
        exit 1
    fi
done
